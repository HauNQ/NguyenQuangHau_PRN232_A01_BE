@* Views/SystemAccount/Delete.cshtml *@
@model SystemAccountDTO

@{
    ViewBag.Title = "Delete Account";
}

<h2 class="my-4">Delete Account</h2>

<div class="alert alert-danger">
    <h5>Are you sure you want to delete this account?</h5>
    <dl class="row">
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Role</dt>
        <dd class="col-sm-9">@(Model.Role == 1 ? "Admin" : "User")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>